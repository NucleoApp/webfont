/*--------------------------------

{{fontName}} Web Font
Generated using nucleoapp.com

-------------------------------- */
{% if encode %}@font-face {
  font-family: '{{fontName}}';
  src: url(data:font/opentype;charset=utf-8;base64,{{base64opentype}});
  src: url(data:font/x-font-woff;charset=utf-8;base64,{{base64woff}}) format('woff'),
      url(data:font/truetype;charset=utf-8;base64,{{base64ttf}}) format('truetype');
  font-weight: normal;
  font-style: normal;
}{% else %}@font-face {
  font-family: '{{fontName}}';
  src: url('../fonts/{{fontName}}.eot');
  src: url('../fonts/{{fontName}}.eot') format('embedded-opentype'), url('../fonts/{{fontName}}.woff2') format('woff2'), url('../fonts/{{fontName}}.woff') format('woff'), url('../fonts/{{fontName}}.ttf') format('truetype'), url('../fonts/{{fontName}}.svg') format('svg');
  font-weight: normal;
  font-style: normal;
}{% endif %}
/*------------------------
	base class definition
-------------------------*/
.{{classBase}} {
  display: inline-block;
  font: normal normal normal 1em/1 '{{fontName}}';
  color: inherit;
  flex-shrink: 0;
  speak: none;
  text-transform: none;
  /* Better Font Rendering */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
/*------------------------
  change icon size
-------------------------*/
/* relative units */
.{{classBase}}-sm {
  font-size: 0.8em;
}
.{{classBase}}-lg {
  font-size: 1.2em;
}
/* absolute units */
.{{classBase}}-16 {
  font-size: 16px;
}
.{{classBase}}-32 {
  font-size: 32px;
}

/*------------------------
  spinning icons
-------------------------*/
.{{classBase}}-is-spinning {
  animation: {{classBase}}-spin 1s infinite linear;
}
@keyframes {{classBase}}-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
/*------------------------
  rotated/flipped icons
-------------------------*/
.{{classBase}}-rotate-90 {
  transform: rotate(90deg);
}
.{{classBase}}-rotate-180 {
  transform: rotate(180deg);
}
.{{classBase}}-rotate-270 {
  transform: rotate(270deg);
}
.{{classBase}}-flip-y {
  transform: scaleY(-1);
}
.{{classBase}}-flip-x {
  transform: scaleX(-1);
}
/*------------------------
	icons
-------------------------*/
{% for glyph in glyphs%}
.{{ className }}-{{ glyph.name }}::before {
  content: "\{{ glyph.unicode[0].charCodeAt(0).toString(16) }}";
}
{% endfor %}
