/*--------------------------------

{{fontName}} Web Font
Generated using nucleoapp.com

-------------------------------- */
{% if encode %}@font-face {
  font-family: '{{fontName}}';
  src: url(data:font/opentype;charset=utf-8;base64,{{base64opentype}});
  src: url(data:font/x-font-woff;charset=utf-8;base64,{{base64woff}}) format('woff'),
      url(data:font/truetype;charset=utf-8;base64,{{base64ttf}}) format('truetype');
  font-weight: normal;
  font-style: normal;
}{% else %}@font-face {
  font-family: '{{fontName}}';
  src: url('../fonts/{{fontName}}.eot');
  src: url('../fonts/{{fontName}}.eot') format('embedded-opentype'), url('../fonts/{{fontName}}.woff2') format('woff2'), url('../fonts/{{fontName}}.woff') format('woff'), url('../fonts/{{fontName}}.ttf') format('truetype'), url('../fonts/{{fontName}}.svg') format('svg');
  font-weight: normal;
  font-style: normal;
}{% endif %}
/*------------------------
	base class definition
-------------------------*/
.{{classBase}} {
  display: inline-block;
  font: normal normal normal 1em/1 '{{fontName}}';
  speak: none;
  text-transform: none;
  /* Better Font Rendering */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
/*------------------------
  change icon size
-------------------------*/
/* relative units */
.{{classBase}}-sm {
  font-size: 0.8em;
}
.{{classBase}}-lg {
  font-size: 1.2em;
}
/* absolute units */
.{{classBase}}-16 {
  font-size: 16px;
}
.{{classBase}}-32 {
  font-size: 32px;
}
/*----------------------------------
  add a square/circle background
-----------------------------------*/
.{{classBase}}-bg-square,
.{{classBase}}-bg-circle {
  padding: 0.35em;
  background-color: #eee;
}
.{{classBase}}-bg-circle {
  border-radius: 50%;
}
/*------------------------
  list icons
-------------------------*/
.{{classBase}}-ul {
  padding-left: 0;
  list-style-type: none;
}
.{{classBase}}-ul > li {
  display: flex;
  align-items: flex-start;
  line-height: 1.4;
}
.{{classBase}}-ul > li > .{{classBase}} {
  margin-right: 0.4em;
  line-height: inherit;
}
/*------------------------
  spinning icons
-------------------------*/
.{{classBase}}-is-spinning {
  -webkit-animation: {{classBase}}-spin 2s infinite linear;
  -moz-animation: {{classBase}}-spin 2s infinite linear;
  animation: {{classBase}}-spin 2s infinite linear;
}
@-webkit-keyframes {{classBase}}-spin {
  0% {
    -webkit-transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
  }
}
@-moz-keyframes {{classBase}}-spin {
  0% {
    -moz-transform: rotate(0deg);
  }
  100% {
    -moz-transform: rotate(360deg);
  }
}
@keyframes {{classBase}}-spin {
  0% {
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    -moz-transform: rotate(360deg);
    -ms-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
/*------------------------
  rotated/flipped icons
-------------------------*/
.{{classBase}}-rotate-90 {
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=1);
  -webkit-transform: rotate(90deg);
  -moz-transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  -o-transform: rotate(90deg);
  transform: rotate(90deg);
}
.{{classBase}}-rotate-180 {
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=2);
  -webkit-transform: rotate(180deg);
  -moz-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  -o-transform: rotate(180deg);
  transform: rotate(180deg);
}
.{{classBase}}-rotate-270 {
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
  -webkit-transform: rotate(270deg);
  -moz-transform: rotate(270deg);
  -ms-transform: rotate(270deg);
  -o-transform: rotate(270deg);
  transform: rotate(270deg);
}
.{{classBase}}-flip-y {
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=0);
  -webkit-transform: scale(-1, 1);
  -moz-transform: scale(-1, 1);
  -ms-transform: scale(-1, 1);
  -o-transform: scale(-1, 1);
  transform: scale(-1, 1);
}
.{{classBase}}-flip-x {
  filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=2);
  -webkit-transform: scale(1, -1);
  -moz-transform: scale(1, -1);
  -ms-transform: scale(1, -1);
  -o-transform: scale(1, -1);
  transform: scale(1, -1);
}
/*------------------------
	font icons
-------------------------*/
/* all icon font classes list here */
{% for glyph in glyphs%}
.{{ className }}-{{ glyph.name }}::before {
  content: "\{{ glyph.unicode[0].charCodeAt(0).toString(16) }}";
}
{% endfor %}
